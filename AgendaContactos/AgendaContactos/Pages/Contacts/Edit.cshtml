@page
@model AgendaContactos.Pages.Contacts.EditModel

@{
    ViewData["Title"] = "Editar el contacto";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-8 offset-2">
            <h2 class="text-info">
                Editar el contacto: @Model.ViewModel.Contact.Id
            </h2>

            <form method="post" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="ViewModel.Contact.Id"/>

                <div class="form-group mb-3">
                    <label asp-for="ViewModel.Contact.Name" class="form-label"></label>
                    <input asp-for="ViewModel.Contact.Name" class="form-control" placeholder="Escribe un nombre..."/>
                    <span asp-validation-for="ViewModel.Contact.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ViewModel.Contact.Email" class="form-label"></label>
                    <input asp-for="ViewModel.Contact.Email" class="form-control" placeholder="Escribe el email..."/>
                    <span asp-validation-for="ViewModel.Contact.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ViewModel.Contact.PhoneNumber" class="form-label"></label>
                    <input asp-for="ViewModel.Contact.PhoneNumber" class="form-control" placeholder="Escribe el numero de telefono..."/>
                    <span asp-validation-for="ViewModel.Contact.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ViewModel.Contact.Category" class="form-label"></label>
                    
                    <select asp-for="ViewModel.Contact.CategoryId" 
                    asp-items="@(new SelectList(Model.ViewModel.Categories, "Id", "Name"))"
                    class="form-control"></select>

                    <span asp-validation-for="ViewModel.Contact.Category" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ViewModel.Contact.CreationDate" class="form-label"></label>
                    <input asp-for="ViewModel.Contact.CreationDate" class="form-control"/>
                    <span asp-validation-for="ViewModel.Contact.CreationDate" class="text-danger"></span>
                </div>

                <button type="submit" class="text-center btn btn-primary col-12">Editar contacto</button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <a asp-page="Index" class="btn btn-secondary">Regresar</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}