@page
@model AgendaContactos.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categorias";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-9">
            <h2 class="text-info">Categorias</h2>
        </div>

        <div class="col-3">
            <a asp-page="../Categories/Create" class="col-12 btn btn-primary">
                Crear categoria
            </a>
        </div>
    </div>

    @if (Model.Categories.Count() > 0) {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(c => c.Categories.FirstOrDefault().Id)</th>
                    <th>@Html.DisplayNameFor(c => c.Categories.FirstOrDefault().Name)</th>
                    <th>@Html.DisplayNameFor(c => c.Categories.FirstOrDefault().CreationDate)</th>
                    <th>Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var categorie in Model.Categories) {
                    <tr class="table-light">
                        <td>@Html.DisplayFor(c => categorie.Id)</td>
                        <td>@Html.DisplayFor(c => categorie.Name)</td>
                        <td>@Html.DisplayFor(c => categorie.CreationDate)</td>
                        <td>
                            <a class="col-3 btn btn-success" asp-page="../Categories/Detail" asp-route-id="@categorie.Id">Detalle</a>
                            <a class="col-3 offset-1 btn btn-warning" asp-page="../Categories/Edit" asp-route-id="@categorie.Id">Editar</a>
                            <a class="col-3 offset-1 btn btn-danger" asp-page="../Categories/Delete" asp-route-id="@categorie.Id">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    } else {
        <h3 class="text-warning text-center">No hay categorias</h3>
    }
</div>